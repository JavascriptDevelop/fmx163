{
    "manifest_version": 2,
    "name": "FMx163",
    "version": "0.0.4",
    "description": "FMx163: 轻松享受高品质的豆瓣FM",
    "icons": {
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "permissions": [
        "tabs",
        "storage",
        "notifications"
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "content_scripts": [{
        "css": ["main.css"],
        "js": ["jquery-2.0.3.min.js", "c_fm.js"],
        "matches": ["http://douban.fm/", "http://douban.fm/?*"]
    }, {
        "js": ["jquery-2.0.3.min.js", "jquery.waituntilexists.js", "c_163.js"],
        "matches": ["http://music.163.com/search/*"],
        "all_frames": true
    }],
    "web_accessible_resources": ["e_fm.js"]
}
