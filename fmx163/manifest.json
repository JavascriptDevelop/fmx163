{
    "manifest_version": 2,
    "name": "高品质豆瓣FM",
    "version": "2.0.0",
    "description": "\"高品质豆瓣FM\"让你轻松享受高达320kbps高品质的豆瓣FM！",
    "icons": {
        "128": "icons/icon128.png",
        "48": "icons/icon48.png",
        "32": "icons/icon32.png",
        "16": "icons/icon16.png"
    },
    "permissions": [
        "tabs",
        "storage",
        "notifications",
        "*://*.music.126.net/*",
        "*://music.163.com/*",
        "*://music.baidu.com/*",
        "*://play.baidu.com/*",
        "*://yinyueshiting.baidu.com/*",
        "*://119.75.215.114/*",
        "webRequest",
        "webRequestBlocking"
    ],
    "background": {
        "scripts": ["lib/json.js", "lib/jquery-2.0.3.min.js", "base.js", "background.js"],
        "persistent": true
    },
    "content_scripts": [{
        "css": ["main.css"],
        "js": ["lib/json.js", "lib/jquery-2.0.3.min.js", "base.js", "c_fm.js"],
        "matches": ["http://douban.fm/", "http://douban.fm/?*"]
    }],
    "web_accessible_resources": ["e_fm.js", "icons/*"],
    "browser_action": {
        "default_icon": "icons/icon32.png",
        "default_popup": "popup.html"
    }
}
